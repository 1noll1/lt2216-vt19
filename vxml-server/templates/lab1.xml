<?xml version="1.0" encoding="UTF-8"?>
<vxml version="2.1" xmlns="http://www.w3.org/2001/vxml"
      xmlns:voxeo="http://community.voxeo.com/xmlns/vxml">
      
  <nomatch>
    Sorry, I didn't understand.
    <reprompt/>
  </nomatch>
  
  <noinput>
    You didn't say anything.
    <reprompt/>
  </noinput>

  <!-- Data model -->
  <var name="from" />
  <var name="to" />
  <var name="date" />
  <var name="returnDate" />

  <!-- State machine -->
  <form id="welcome">
    <block>
      <prompt>
        <break time="2000" />
        Welcome to the flight booking service.
      </prompt>
      <goto next="#askFrom" />
    </block>
  </form>

  <form id="askFrom">
    <field name="fromField">
      <prompt timeout="12s">
        What city are you leaving from?
      </prompt>
      <option>london</option>
      <option>paris</option>
      <option>new york</option>
    </field>
    <nomatch>
      I didn't understand. You can say London, Paris or New York.
    </nomatch>
    <noinput>
      Please name your city of departure.
    </noinput>
    <filled>
      <assign name="from" expr="fromField" />
      <goto next="#askTo" />
    </filled>
  </form>

  <form id="askTo">
    <field name="toField">
      <prompt>
        Where are you going?
      </prompt>
      <option>london</option>
      <option>paris</option>
      <option>new york</option>
    </field>
    <nomatch>
      I didn't understand. You can say London, Paris or New York.
    </nomatch>
    <noinput>
      Please name your destination.
    </noinput>
    <filled>
      <assign name="to" expr="toField" />
      <if cond="from == to ">
        <prompt bargein="false">
          Your destination must be different from the city of departure. Please name a city that is not <value expr="from" />.
        </prompt>
        <clear namelist="to" />
        <goto next="#askTo" />
      <else />
        <goto next="#askDate" />
      </if>
    </filled>
  </form>

  <form id="askDate">
    <field name="leaveDate">
      <prompt>
        What date do you want to leave?
      </prompt>
    <option>Monday</option>
    <option>Tuesday</option>
    <option>Wednesday</option>
    <option>Thursday</option>
    <option>Friday</option>
    <option>Saturday</option>
    <option>Sunday</option>
    </field>
    <nomatch>
      Please name the weekday on which you would like to travel.
    </nomatch>
    <noinput>
      Please state your date of departure.
    </noinput>
    <filled>
      <assign name="date" expr="leaveDate" />
      <goto next="#oneWay" />
    </filled>
  </form>

  <form id="oneWay">
    <field name="isOneWay" type="boolean">
      <prompt>
        Is it a one way trip?
      </prompt>
    </field>
      <filled>
        <if cond="isOneWay">
          <goto next="#grounding" />
        <else />
          <goto next="#askDateReturn" />
        </if>
      </filled>
  </form>

    <form id="askDateReturn">
      <field name="returnField">
        <prompt>
          What date do you want to return?
        </prompt>
        <option>Monday</option>
        <option>Tuesday</option>
        <option>Wednesday</option>
        <option>Thursday</option>
        <option>Friday</option>
        <option>Saturday</option>
        <option>Sunday</option>
      </field>
    <nomatch>
      Please name the weekday on which you would like to return.
    </nomatch>
    <noinput>
      Please state your return date.
    </noinput>
    <filled>
      <assign name="returnDate" expr="returnField" />
      <goto next="#groundingReturn" />
    </filled>
  </form>

  <form id="grounding">
    <field name="ToFrom" type="boolean">
      <prompt>
        Do you want to go from <value expr="from"/> to <value expr="to"/> on <value expr="date"/>?
      </prompt>
      <filled>
        <if cond="ToFrom">
          <goto next="#confirmation" />
        <else />
          <goto next="#askTo" />
        </if>
      </filled>
    </field>
  </form>

    <form id="groundingReturn">
    <field name="ToFromReturn" type="boolean">
      <prompt>
        Do you want to go from <value expr="from"/> to <value expr="to"/> on <value expr="date"/> and return on <value expr="returnDate"/>?
      </prompt>
      <filled>
        <if cond="ToFrom">
          <goto next="#confirmation" />
        <else />
          <goto next="#askDateReturn" />
        </if>
      </filled>
    </field>
  </form>

  <form id="confirmation">
    <block>
      <prompt bargein="false">
        Your flight has been booked! Thank you and good bye.
      </prompt>
    </block>
  </form>
</vxml>